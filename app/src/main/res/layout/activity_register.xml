<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_restaurant_menu_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:paddingBottom="20dp"
            android:text="Yummy HUB"
            android:textAlignment="center"
            android:textSize="35dp" />

        <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/email"
            android:paddingLeft="10dp"
            android:text="Nombre de Usuario"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:inputType="textEmailAddress"
            android:nextFocusDown="@id/email"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textSize="20dp" />

        <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/email"
            android:paddingLeft="10dp"
            android:text="Correo Electronico"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:inputType="textEmailAddress"
            android:nextFocusDown="@id/password"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textSize="20dp" />

        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/password"
            android:paddingLeft="10dp"
            android:text="ContraseÃ±a"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:inputType="textPassword"
            android:keyboardNavigationCluster="true"
            android:nextFocusDown="@id/btnLogin"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:nextClusterForward="@id/btnLogin"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:background="@drawable/custom_button"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya tienes cuenta? Inicia sesion"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignBottom="@id/btnLogin"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>